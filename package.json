{
    "name": "litentry-registrar",
    "version": "1.0.0",
    "description": "Litentry Polkadot/Kusama Registrar",
    "main": "index.js",
    "scripts": {
        "jest": "jest --testPathIgnorePatterns \".*\\.js$\"",
        "build": "rm -rf ./dist && tsc && cp -R app/validator/templates dist/app/validator && cp -R app/pages/templates dist/app/pages",
        "setup": "NODE_PATH=./ ts-node setup.ts",
        "setup:built": "NODE_PATH=./dist node dist/setup.js",
        "test": "NODE_PATH=./ ts-node tests/ci.inspect.ts && jest --testPathIgnorePatterns  \".*\\.js$\"",
        "test:built": "NODE_PATH=./dist node dist/tests/ci.inspect.js && jest --testPathIgnorePatterns  \".*\\.ts$\"",
        "lint": "./node_modules/.bin/eslint --fix app",
        "start": "NODE_PATH=./dist pm2 start dist/app --restart-delay=2000 --name kusama-registrar",
        "start:dev": "NODE_PATH=./ nodemon --ignore tests --ext ts,js --exec 'ts-node app/index.ts'"
    },
    "engines": {
        "node": ">=14.15.0",
        "npm": ">=7.11.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/litentry/litentry-registrar.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/litentry/litentry-registrar/issues"
    },
    "homepage": "https://github.com/litentry/litentry-registrar#readme",
    "dependencies": {
        "@polkadot/types": "5.8.2",
        "@polkadot/api": "5.6.1",
        "@sendgrid/mail": "^7.4.6",
        "axios": "^0.21.3",
        "chalk": "^4.1.2",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "hogan.js": "^3.0.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.20",
        "lru-cache": "^6.0.0",
        "matrix-js-sdk": "^12.4.0",
        "mongodb": "^3.6.10",
        "twitter-api-client": "^1.3.1",
        "uuid": "^8.3.1",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/hogan.js": "^3.0.1",
        "@types/jest": "^27.0.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/lodash": "^4.14.172",
        "@types/lru-cache": "^5.1.1",
        "@types/matrix-js-sdk": "^11.0.1",
        "@types/mongodb": "3.6.10",
        "chai": "^4.3.0",
        "eslint": "^7.32.0",
        "eslint-plugin-mocha": "^9.0.0",
        "husky": "^7.0.2",
        "jest": "^27.1.0",
        "mocha": "^9.1.1",
        "nodemon": "^2.0.12",
        "pm2": "^5.1.1",
        "prettier": "^2.1.2",
        "supertest": "^6.1.5",
        "ts-jest": "^27.0.5",
        "ts-node": "^9.1.1",
        "typescript": "^4.4.2"
    },
    "husky": {
        "hooks": {
            "pre-push": "eslint ."
        }
    }
}
