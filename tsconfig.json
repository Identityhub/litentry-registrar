{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "paths": {
	  "matrix-js-sdk": [
	    "node_modules/@types/matrix-js-sdk/index.d.ts"
	  ]
    }
  },
  "exclude": ["node_modules/matrix-js-sdk/lib/*.d.ts"],
  "include": [
    "./setup.ts",
    "app/**/*.ts",
    "app/**/*.js",
    "tests/**/*.ts"
  ]
}
